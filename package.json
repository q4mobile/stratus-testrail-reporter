{
  "name": "@q4/stratus-testrail-reporter",
  "version": "4.0.0",
  "description": "A custom Github Action that consumes Stratus test reports to create and execute TestRail runs",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "jest --watchAll=true",
    "test:build": "./node_modules/.bin/jest",
    "build": "tsc",
    "package": "ncc build --source-map",
    "all": "npm run build && npm run package",
    "start": "npm run build && "
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "moment-timezone": "^0.5.x",
    "testrail-api": "^1.3.x",
    "typescript": "^4.8.x"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^16.11.56",
    "@types/request": "^2.48.8",
    "@vercel/ncc": "^0.34.0",
    "jest": "^29.0.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.5.0"
  }
}
